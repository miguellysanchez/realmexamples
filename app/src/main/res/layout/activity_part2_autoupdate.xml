<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_part2_recyclerview_dogs"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_part2_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog's name"
            android:padding="8dp" />

        <EditText
            android:id="@+id/activity_part2_edittext_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog's breed"
            android:padding="8dp" />

        <EditText
            android:id="@+id/activity_part2_edittext_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog's age"
            android:padding="8dp" />

        <Button
            android:id="@+id/activity_part2_button_add_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="part2AddDog"
            android:text="ADOPT NEW DOG" />

        <Button
            android:id="@+id/activity_part2_button_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="part2UpdateDogList"
            android:text="UPDATE DOG LIST" />

        <Button
            android:id="@+id/activity_part2_button_close_realm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="part2CloseRealm"
            android:text="CLOSE REALM" />

        <Button
            android:id="@+id/activity_part2_button_reset_realm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="part2ResetRealm"
            android:text="RESET REALM" />
    </LinearLayout>
</LinearLayout>